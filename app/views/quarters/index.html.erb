<p id="notice"><%= notice %></p>

<h1>Quarters</h1>

<table>
  <thead>
    <tr>
      <th>Zip code</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quarters.each do |quarter| %>
      <tr>
        <td><%= quarter.zip_code %></td>
        <td><%= quarter.name %></td>
        <td><%= link_to 'Show', quarter %></td>
        <% if user_signed_in? && current_user.role === 'admin' %>
        <td><%= link_to 'Edit', edit_quarter_path(quarter) %></td>
        <td><%= link_to 'Destroy', quarter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>